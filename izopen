function check_system_commands() {
  # verify if all commands are installed in the system paths
  for COMMAND in $@
    do
      which "$COMMAND" >/dev/null 2>&1
      [ $? -ne 0 ] && echo "WARNING: the command '$COMMAND' doesn't exist in any path, please install it and retry"
    done
}

function check_helper_cmd() {
  which "$@" >/dev/null 2>&1
  [ $? -ne 0 ] && echo "WARNING: the command '$@' doesn't exist in any path, please install it and retry"
}

function helper_terminal() {
  # if helper_name[$schema] is not defined, use the helper_cmd[$schema] instead
  [ -z "${helper_name[terminal]}" ] && helper_name[terminal]="${helper_cmd[terminal]}"

  # verify if the command exist
  check_helper_cmd "${helper_cmd[terminal]}"

  if [ "$tunnel_create" = 1 ]; then
     local terminal_title="H:$host P:$tunnel_port_create [MASTER]"
   else
     local terminal_title="H:$host P:$tunnel_port_create [SLAVE]"
  fi

  # Initialize terminal options array
  terminal_opts_array=()

  # Parse any pre-configured options from config file
  if [ -n "${helper_opts[terminal]}" ]; then
    read -ra terminal_opts_array <<< "${helper_opts[terminal]}"
  fi

  # Add terminal-specific options directly to array
  case ${helper_name[terminal]} in
    konsole)
      ## for a usable list:
      ## konsole --list-profile-properties | less
      #terminal_opts_array+=(-p "tabtitle=(%u) %H")
      terminal_opts_array+=(-p "name=$host")
      terminal_opts_array+=(-p "LocalTabTitleFormat=$terminal_title")
      terminal_opts_array+=(-p "RemoteTabTitleFormat=$terminal_title")
      terminal_opts_array+=(-p "TabColor=#aa55ff")
      terminal_opts_array+=(-p "UseCustomCursorColor=true")
      terminal_opts_array+=(-p "CustomCursorColor=orange")
      terminal_opts_array+=(--show-tabbar)
      #terminal_opts_array+=(--noclose)
      ;;
    mintty)
      terminal_opts_array+=(-T "$terminal_title")
      ;;
    *)
      #echo helper_name[terminal]: ${helper_name[terminal]}
      terminal_opts_array+=(--title="$terminal_title")
      ;;
  esac
}

#########################################################################
# DIALOG FUNCTIONS - Support for zenity, kdialog and yad
#########################################################################

# Detect desktop environment and select appropriate dialog tool
function detect_dialog_tool() {
  # Check if running on KDE Plasma
  if [[ "$XDG_CURRENT_DESKTOP" == *"KDE"* ]] || [[ "$DESKTOP_SESSION" == *"plasma"* ]]; then
    #dialog_tool="kdialog"
    dialog_tool="zenity"
  else
    # Default to zenity for all other desktop environments, fallback to yad
    if command -v zenity &> /dev/null; then
      dialog_tool="zenity"
    else
      dialog_tool="yad"
    fi
  fi
}

# RDP connection form dialog
function dialog_form_rdp() {
  local domain="$1"
  local host="$2"
  local username="$3"
  local password="$4"

  case "$dialog_tool" in
    kdialog)
      # kdialog: use multiple sequential input boxes
      local d=$(kdialog --inputbox "Domain:" "$domain" 2>/dev/null)
      [ $? -ne 0 ] && return 1
      local h=$(kdialog --inputbox "Address:" "$host" 2>/dev/null)
      [ $? -ne 0 ] && return 1
      local u=$(kdialog --inputbox "Username:" "$username" 2>/dev/null)
      [ $? -ne 0 ] && return 1
      local p=$(kdialog --password "Password:" 2>/dev/null)
      [ $? -ne 0 ] && return 1
      # Use default values for security (nla) and console (FALSE)
      echo "$d|$h|$u|$p|nla|FALSE"
      ;;
    zenity)
      # zenity: use forms
      zenity --forms --title="Connect to remote computer" --width=400 \
        --text="RDP Connection" \
        --add-entry="Domain" \
        --add-entry="Address" \
        --add-entry="Username" \
        --add-password="Password" \
        --add-combo="Security" --combo-values="rdp|tls|nla|ext" \
        --separator="|" 2>/dev/null
      ;;
    *)
      # yad: original form with all fields
      LANG=C yad --center --width=300 --title="Connect to remote computer" \
        --focus-field=4 --align=right --form \
        --field="Domain" "$domain" \
        --field="Address" "$host" \
        --field="Username" "$username" \
        --field="Password":H "$password" \
        --field="Security":CB 'rdp!tls!^nla!ext' \
        --field="Admin Console":CHK 2>/dev/null | \
        grep -v "WINDOW DECORATIONS RELOADED"
      ;;
  esac
}

# VNC connection form dialog
function dialog_form_vnc() {
  local host="$1"
  local username="$2"
  local password="$3"

  case "$dialog_tool" in
    kdialog)
      # kdialog: use multiple sequential input boxes
      local h=$(kdialog --inputbox "Address:" "$host" 2>/dev/null)
      [ $? -ne 0 ] && return 1
      local u=$(kdialog --inputbox "Username:" "$username" 2>/dev/null)
      [ $? -ne 0 ] && return 1
      local p=$(kdialog --password "Password:" 2>/dev/null)
      [ $? -ne 0 ] && return 1
      echo "$h|$u|$p"
      ;;
    zenity)
      # zenity: use forms
      zenity --forms --title="Connect to remote computer" --width=400 \
        --text="VNC Connection" \
        --add-entry="Address" \
        --add-entry="Username" \
        --add-password="Password" \
        --separator="|" 2>/dev/null
      ;;
    *)
      # yad: original form
      LANG=C yad --center --width=300 --title="Connect to remote computer" \
        --focus-field=3 --align=right --form \
        --field="Address" "$host" \
        --field="Username" "$username" \
        --field="Password":H "$password" 2>/dev/null | \
        grep -v "WINDOW DECORATIONS RELOADED"
      ;;
  esac
}

# SSH tunnel port entry dialog
function dialog_entry_port() {
  local default_port="$1"
  local min="$2"
  local max="$3"

  case "$dialog_tool" in
    kdialog)
      kdialog --inputbox "Inserire porta SOCKS proxy ($min-$max):" "$default_port" 2>/dev/null
      ;;
    zenity)
      zenity --entry --title="izOpen SSH Proxy" --width=300 \
        --text="Inserire porta SOCKS proxy ($min-$max):" \
        --entry-text="$default_port" 2>/dev/null
      ;;
    *)
      LANG=C yad --center --title="izOpen SSH Proxy" --entry --numeric \
        --entry-text=$default_port \
        --text="<b>Inserire la porta del Proxy Socks</b> \nCompresa fra $min e $max\n" \
        $min $max --timeout=10 --timeout-indicator=bottom 2>/dev/null | \
        tr -d [:alpha:] | tr -d [:cntrl:] | tr -d [:space:]
      ;;
  esac
}

# Connection error log viewer dialog
function dialog_text_info() {
  local log_file="$1"
  local log_content

  # Extract relevant log entries
  log_content=$(tail -n 350 "$log_file" | sed -n "H; /^$(date '+%Y-%m-%d')/h; \${g;p;}")

  case "$dialog_tool" in
    kdialog)
      echo "$log_content" | kdialog --textbox /dev/stdin 100 40 --title "Connection Error" 2>/dev/null
      ;;
    zenity)
      echo "$log_content" | zenity --text-info --title="Connection Error" --width=1000 --height=500 2>/dev/null
      ;;
    *)
      echo "$log_content" | LANG=C yad --center --width=1000 --height=500 \
        --title="Connection Error" --button="Close":0 \
        --text="Errors from ${log_file}" \
        --text-info --fontname="Monospace 8" 2>/dev/null
      ;;
  esac
}

function helper_ssh() {
  # if helper_name[$schema] is not defined, use the helper_cmd[$schema] instead
  [ -z "${helper_name[ssh]}" ] && helper_name[ssh]="${helper_cmd[ssh]}"

  # verify if the command exist
  check_helper_cmd "${helper_cmd[ssh]}"

  # reset array
  izopen_connect=()

  # open external terminal app if required
  if [ "$terminal_use" = 1 ]; then
    helper_terminal
    izopen_connect+=("${helper_cmd[terminal]}")
    # add terminal options as separate array elements
    if [ ${#terminal_opts_array[@]} -gt 0 ]; then
      izopen_connect+=("${terminal_opts_array[@]}")
    fi
    izopen_connect+=("-e")
  fi

  # password less ssh login using sshpass
  # FIXME don't use sshpass outside linux environment because this bug:
  # https://github.com/msys2/MSYS2-packages/issues/2458
  case $OSTYPE in
    cygwin*|msys*)
      ;;
    *)
      if [ ! -z "$password" ]; then
        # pretty insecure, but the export is needed to avoid printing password into processlist
        export SSHPASS=$password
        izopen_connect+=(sshpass -e)
      fi
      ;;
  esac

  # add ssh command
  izopen_connect+=("${helper_cmd[ssh]}")

  # add ssh options as separate array elements
  if [ -n "${helper_opts[ssh]}" ]; then
    read -ra ssh_opts_array <<< "${helper_opts[ssh]}"
    izopen_connect+=("${ssh_opts_array[@]}")
  fi

  # add username and host
  if [ ! -z "$username" ]; then
    izopen_connect+=("$username@$host")
  else
    izopen_connect+=("$host")
  fi

  # add the port if not default 22
  [ ! -z "$port" ] && izopen_connect+=(-p "$port")

  # enable compression
  izopen_connect+=(-C)

  # if tunnel_create=1 add ssh options to create socks tunnel
  [ "$tunnel_create" = 1 ] && izopen_connect+=(-D "$tunnel_port_create")
}

function helper_telnet() {
  # if helper_name[$schema] is not defined, use the helper_cmd[$schema] instead
  [ -z "${helper_name[telnet]}" ] && helper_name[telnet]="${helper_cmd[telnet]}"

  # verify if the command exist
  check_helper_cmd "${helper_cmd[telnet]}"

  # reset array
  izopen_connect=()

  # open external terminal app if required
  if [ "$terminal_use" = 1 ]; then
    helper_terminal
    izopen_connect+=("${helper_cmd[terminal]}")
    if [ ${#terminal_opts_array[@]} -gt 0 ]; then
      izopen_connect+=("${terminal_opts_array[@]}")
    fi
    izopen_connect+=("-e")
  fi

  # add telnet command
  izopen_connect+=("${helper_cmd[telnet]}")

  # add telnet options as separate array elements
  if [ -n "${helper_opts[telnet]}" ]; then
    read -ra telnet_opts_array <<< "${helper_opts[telnet]}"
    izopen_connect+=("${telnet_opts_array[@]}")
  fi

  # add host
  izopen_connect+=("$host")

  # add port if specified
  [ -n "$port" ] && izopen_connect+=("$port")
}

function helper_http() {
  # if helper_name[$schema] is not defined, use the helper_cmd[$schema] instead
  [ -z "${helper_name[http]}" ] && helper_name[http]="${helper_cmd[http]}"

  # verify if the command exist
  check_helper_cmd "${helper_cmd[http]}"

  # reset array
  izopen_connect=()

  # run the connection
  case ${helper_name[http]} in
    google-chrome)
      izopen_connect+=("${helper_cmd[http]}")

      # add base options as separate array elements
      if [ -n "${helper_opts[http]}" ]; then
        read -ra http_opts_array <<< "${helper_opts[http]}"
        izopen_connect+=("${http_opts_array[@]}")
      fi

      # open the browser with this options only on tunnel connection
      if [ $tunnel_use = 1 ]; then
        # Chrome handles proxy directly via --proxy-server, skip helper_prepend (proxychains)
        helper_prepend_skip=1

        izopen_connect+=(--aggressive-cache-discard)
        izopen_connect+=(--disable-notifications)
        izopen_connect+=(--enable-aggressive-domstorage-flushing)
        izopen_connect+=(--disable-client-side-phishing-detection)
        izopen_connect+=(--disable-gpu)
        izopen_connect+=(--restore-last-session)
        izopen_connect+=(--no-first-run)
        izopen_connect+=(--disable-translate)
        izopen_connect+=(--password-store=basic)
        izopen_connect+=(--proxy-server="socks5://127.0.0.1:$tunnel_port_use")

        case $OSTYPE in
          cygwin*)
            # google chrome under windows workaround
            izopen_connect+=(--user-data-dir="$(cygpath -w "$izopen_conf_dir/google-chrome/$tunnel_port_use")")
            ;;
          *)
            izopen_connect+=(--user-data-dir="$izopen_conf_dir/google-chrome/$tunnel_port_use")
            ;;
        esac
      fi
      ;;
    midori)
      izopen_connect+=("${helper_cmd[http]}")

      if [ -n "${helper_opts[http]}" ]; then
        read -ra http_opts_array <<< "${helper_opts[http]}"
        izopen_connect+=("${http_opts_array[@]}")
      fi

      izopen_connect+=(-c "$izopen_conf_dir/midori/$tunnel_port_use")
      ;;
    *)
      helper_cmd[http]="xdg-open"
      izopen_connect+=("${helper_cmd[http]}")

      if [ -n "${helper_opts[http]}" ]; then
        read -ra http_opts_array <<< "${helper_opts[http]}"
        izopen_connect+=("${http_opts_array[@]}")
      fi
      ;;
  esac

  # add URI as last argument
  izopen_connect+=("${uri}")
}

function helper_rdp() {
  # if helper_name[$schema] is not defined, use the helper_cmd[$schema] instead
  [ -z "${helper_name[rdp]}" ] && helper_name[rdp]="${helper_cmd[rdp]}"

  # verify if the command exist
  check_helper_cmd "${helper_cmd[rdp]}"

  # manage non mandatory cmd options
  helper_opts=" ${helper_opts[rdp]}"

  # obtain general info used by all rdp commands
  ## extract windows domain from username and convert to the right name
  # using / or \ as domain separator the domain is the first argument
  if [ ! -z $(echo "$username" | grep "/") ]; then
    domain="$(echo "$username" | awk -F"/" '{print $1}')"
    username="$(echo "$username" | awk -F"/" '{print $2}')"
  fi
  # using @ as domain separator the domain is the second argument
  if [ ! -z $(echo "$username" | grep "@") ]; then
    domain="$(echo "$username" | awk -F"@" '{print $2}')"
    username="$(echo "$username" | awk -F"@" '{print $1}')"
  fi

  # FIXME: @20220714 still needed? commenting
  #password="$(echo -e -n "$password" | sed 's/\%25/\%/g' | sed -e 's/%\([A-Z]\)/%\L\1/')" # keepassxc bug workaround: after the '%' char, keepassxc convert to uppercase the following char

  # special characters in password like ',!
  #password="$(echo -e -n "$password" | sed -e "s/'/\\\'/g" -e "s/!/\\\!/g")"

  #[ -z "$username" ] && username=$domain && unset domain
  #username="$(echo "$username" | sed 's/\//\\\\/g')"

  if [[ -z "$host" || -z "$username" || -z "$password" || "$username" = "{USERNAME}" || "$password" = "{PASSWORD}" || "$username" = "%7BUSERNAME%7D" || "$password" = "%7BPASSWORD%7D" ]]; then
    frmdata=$(dialog_form_rdp "$domain" "$host" "$username" "$password")
    [ $? != 0 ] && exit 1
    domain=$(echo $frmdata | awk 'BEGIN {FS="|" } { print $1 }')
    host=$(echo $frmdata | awk 'BEGIN {FS="|" } { print $2 }')
    username=$(echo $frmdata | awk 'BEGIN {FS="|" } { print $3 }')
    password=$(echo $frmdata | awk 'BEGIN {FS="|" } { print $4 }')
    security=$(echo $frmdata | awk 'BEGIN {FS="|" } { print $5 }')
    console=$(echo $frmdata | awk 'BEGIN {FS="|" } { print $6 }')
  fi

  # run the connection
  case ${helper_name[rdp]} in
    rdesktop)
      # reset array
      izopen_connect=()

      # add command
      izopen_connect+=("${helper_cmd[rdp]}")

      # add base options as separate array elements
      if [ -n "${helper_opts[rdp]}" ]; then
        read -ra rdp_opts_array <<< "${helper_opts[rdp]}"
        izopen_connect+=("${rdp_opts_array[@]}")
      fi

      # escape all special characters in password
      #[ ! -z "$password" ] && password=$(echo $password | sed 's/[^a-zA-Z0-9]/\\&/g')

      [ -n "$domain" ]   && izopen_connect+=(-d "$domain")
      [ -n "$username" ] && izopen_connect+=(-u "$username")
      [ -n "$password" ] && izopen_connect+=(-p "$password")
      [ -n "$port" ]     && local port_suffix=":$port" || local port_suffix=""

      # add host with optional port
      izopen_connect+=("${host}${port_suffix}")
      ;;
    xfreerdp)
      # reset array
      izopen_connect=()

      # add command
      izopen_connect+=("${helper_cmd[rdp]}")

      # add base options as separate array elements
      if [ -n "${helper_opts[rdp]}" ]; then
        read -ra rdp_opts_array <<< "${helper_opts[rdp]}"
        izopen_connect+=("${rdp_opts_array[@]}")
      fi

      # NOTE: xfreerdp 3.x does not need password escaping when using bash arrays with quoted arguments
      # The password is passed correctly as-is. Escaping special chars causes authentication to fail.
      # [ ! -z "$password" ] && password=$(echo $password | sed 's/[^a-zA-Z0-9]/\\&/g')

      # xfreerdp > 3.x default options
      izopen_connect+=(+clipboard +auto-reconnect /auto-reconnect-max-retries:2 /cache:bitmap:on +compression /gdi:hw -wallpaper /dynamic-resolution /size:85% /cert:ignore /log-level:ERROR)

      [ ! -z "$domain" ]   && izopen_connect+=(/d:"$domain")
      [ ! -z "$username" ] && izopen_connect+=(/u:"$username")
      if [ ! -z "$password" ]; then
        izopen_connect+=(/p:"$password")
      else
        izopen_connect+=(/p:'')
      fi
      [ ! -z "$port" ]     && izopen_connect+=(/port:"$port")
      [ ! -z "$security" ] && izopen_connect+=(/sec:"$security")
      [ "$console" = "TRUE" ] && izopen_connect+=(/console)

      # add server
      izopen_connect+=(/v:"${host}")
      ;;
    remmina)
      # izopen_conf_remmina_dir="$izopen_conf_dir/remmina"
      # [ ! -e "$izopen_conf_remmina_dir" ] && mkdir -p "$izopen_conf_remmina_dir"
      # connection_name="$(echo $host | sed -e 's/[^A-Za-z0-9_-]/_/g')"
      # izopen_conf_remmina_conf="$izopen_conf_remmina_dir/${connection_name}_${schema}.remmina"

      # remove legacy files
      [ -e "$izopen_conf_dir/remmina" ] && rm -f $izopen_conf_dir/remmina/*.remmina && rmdir $izopen_conf_dir/remmina

      # create remmina config file
      izopen_conf_remmina_conf="$izopen_cache_dir/izopen.remmina"

      [ -z "$port" ] && server="$host" || server="$host:$port"

      function make_remmina_conf() {
        cat <<EOF
[remmina]
name=$host
#$([ $tunnel_use = 1 ] && echo -e "proxy_type=socks5\nproxy_hostname=127.0.0.1\nproxy_port=$tunnel_port_use")
protocol=RDP
resolution_mode=2
scale=2
viewmode=1
window_maximize=1
server=$server
$([ ! -z "$domain" ] && echo "domain=$domain")
$([ ! -z "$username" ] && echo "username=$username")
$([ ! -z "$password" ] && echo "password=$password")
$(for remmina_conf in ${helper_conf[rdp]}; do echo -e "$remmina_conf\n";done)
EOF
      }

      make_remmina_conf > "${izopen_conf_remmina_conf}"

      # reset array
      izopen_connect=()

      # add command
      izopen_connect+=("${helper_cmd[rdp]}")

      # add base options as separate array elements
      if [ -n "${helper_opts[rdp]}" ]; then
        read -ra rdp_opts_array <<< "${helper_opts[rdp]}"
        izopen_connect+=("${rdp_opts_array[@]}")
      fi

      izopen_connect+=(-c "${izopen_conf_remmina_conf}")
      ;;
    krdc)
      # reset array
      izopen_connect=()

      # add command
      izopen_connect+=("${helper_cmd[rdp]}")

      # add base options as separate array elements
      if [ -n "${helper_opts[rdp]}" ]; then
        read -ra rdp_opts_array <<< "${helper_opts[rdp]}"
        izopen_connect+=("${rdp_opts_array[@]}")
      fi

      # Build RDP URL for krdc
      # Format: rdp://[DOMAIN\username[:password]@]host[:port]
      local rdp_url="rdp://"

      # Add credentials if present
      if [ ! -z "$username" ]; then
        # Add domain prefix if present (DOMAIN\username format for krdc)
        if [ ! -z "$domain" ]; then
          rdp_url+="${domain}\\${username}"
        else
          rdp_url+="${username}"
        fi

        # Add password if present
        if [ ! -z "$password" ]; then
          # NOTE: krdc REQUIRES URL encoding for special characters in passwords (unlike xfreerdp 3.x)
          # Without encoding, passwords with %, !, @, etc. will fail authentication
          local password_encoded=$(printf %s "$password" | sed 's/%/%25/g; s/ /%20/g; s/!/%21/g; s/"/%22/g; s/#/%23/g; s/\$/%24/g; s/&/%26/g; s/'\''/%27/g; s/(/%28/g; s/)/%29/g; s/\*/%2A/g; s/+/%2B/g; s/,/%2C/g; s/:/%3A/g; s/;/%3B/g; s/=/%3D/g; s/?/%3F/g; s/@/%40/g; s/\[/%5B/g; s/\\/%5C/g; s/\]/%5D/g')
          rdp_url+=":${password_encoded}"
        fi

        rdp_url+="@"
      fi

      # Add host
      rdp_url+="${host}"

      # Add port if specified
      if [ ! -z "$port" ]; then
        rdp_url+=":${port}"
      fi

      izopen_connect+=("${rdp_url}")
      ;;
  esac
}

function helper_vnc() {
  # if helper_name[$schema] is not defined, use the helper_cmd[$schema] instead
  [ -z "${helper_name[vnc]}" ] && helper_name[vnc]="${helper_cmd[vnc]}"

  # verify if the command exist
  check_helper_cmd "${helper_cmd[vnc]}"


  if [[ -z "$host" || -z "$username" || -z "$password" || "$username" = "{USERNAME}" || "$password" = "{PASSWORD}" || "$username" = "%7BUSERNAME%7D" || "$password" = "%7BPASSWORD%7D" ]]; then
    frmdata=$(dialog_form_vnc "$host" "$username" "$password")
    [ $? != 0 ] && exit 1
    host=$(echo $frmdata | awk 'BEGIN {FS="|" } { print $1 }')
    username=$(echo $frmdata | awk 'BEGIN {FS="|" } { print $2 }')
    password=$(echo $frmdata | awk 'BEGIN {FS="|" } { print $3 }')
  fi

  # run the connection
  case ${helper_name[vnc]} in
    vncviewer)
      # reset array
      izopen_connect=()

      # add command
      izopen_connect+=("${helper_cmd[vnc]}")

      # add base options as separate array elements
      if [ -n "${helper_opts[vnc]}" ]; then
        read -ra vnc_opts_array <<< "${helper_opts[vnc]}"
        izopen_connect+=("${vnc_opts_array[@]}")
      fi

      # escape all special characters in password
      #[ ! -z "$password" ] && password=$(echo $password | sed 's/[^a-zA-Z0-9]/\\&/g')

      # vnc doesn't support username and actually don't accept the password. use the gnome keyring instead for this
      if [ -n "$port" ]; then
        izopen_connect+=("${host}:${port}")
      else
        izopen_connect+=("${host}")
      fi
      ;;
    remmina)
      # izopen_conf_remmina_dir="$izopen_conf_dir/remmina"
      # [ ! -e "$izopen_conf_remmina_dir" ] && mkdir -p "$izopen_conf_remmina_dir"
      # connection_name="$(echo $host | sed -e 's/[^A-Za-z0-9_-]/_/g')"
      # izopen_conf_remmina_conf="$izopen_conf_remmina_dir/${connection_name}_${schema}.remmina"

      # remove legacy files
      [ -e "$izopen_conf_dir/remmina" ] && rm -f $izopen_conf_dir/remmina/*.remmina && rmdir $izopen_conf_dir/remmina

      # create remmina config file
      izopen_conf_remmina_conf="$izopen_cache_dir/izopen.remmina"

      [ -z "$port" ] && server="$host" || server="$host:$port"

      function make_remmina_conf() {
        cat <<EOF
[remmina]
name=$host
$([ $tunnel_use = 1 ] && echo -e "proxy_type=socks5\nproxy_hostname=localhost\nproxy_port=$tunnel_port_use")
protocol=VNC
viewmode=1
scale=1
window_maximize=1
ignore-tls-errors=1
server=$server
$([ ! -z "$username" ] && echo "username=$username")
$([ ! -z "$password" ] && echo "password=$password")
$(for remmina_conf in ${helper_conf[vnc]}; do echo -e "$remmina_conf\n";done)
EOF
      }
      make_remmina_conf > "${izopen_conf_remmina_conf}"

      # reset array
      izopen_connect=()

      # add command
      izopen_connect+=("${helper_cmd[vnc]}")

      # add base options as separate array elements
      if [ -n "${helper_opts[vnc]}" ]; then
        read -ra vnc_opts_array <<< "${helper_opts[vnc]}"
        izopen_connect+=("${vnc_opts_array[@]}")
      fi

      izopen_connect+=(-c "${izopen_conf_remmina_conf}")
      ;;
    krdc)
      # reset array
      izopen_connect=()

      # add command
      izopen_connect+=("${helper_cmd[vnc]}")

      # add base options as separate array elements
      if [ -n "${helper_opts[vnc]}" ]; then
        read -ra vnc_opts_array <<< "${helper_opts[vnc]}"
        izopen_connect+=("${vnc_opts_array[@]}")
      fi

      # Build VNC URL for krdc
      # Format: vnc://[password@]host[:port]
      local vnc_url="vnc://"

      # Add password if present (VNC typically doesn't use username)
      if [ ! -z "$password" ]; then
        vnc_url+="${password}@"
      fi

      # Add host
      vnc_url+="${host}"

      # Add port if specified
      if [ ! -z "$port" ]; then
        vnc_url+=":${port}"
      fi

      izopen_connect+=("${vnc_url}")
      ;;
  esac
}

